<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBleuFonce">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/backgroundscore"
        android:id="@+id/relativeLayout"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/reglages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titreParam"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/noir"
            android:background="@color/jaune"
            android:padding="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/titreParam"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/langue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:layout_weight="1" />

            </LinearLayout>

            <Button
                android:text="@string/traduire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rafraichirLangue" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>